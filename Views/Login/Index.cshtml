@{
    Layout = "_LoginLayout";
}

@model User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="form-group">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <button id="btn-sub" type="submit" class="btn btn-primary btn-lg">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
    background-color: #f4f7f6; /* Light background for a modern look */
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Modern font */
}

input {
    margin-bottom: 3%;
}

#btn-sub { 
    float: right;
}

.container {
    padding-top: 50px; /* Spacing from the top */
}

.card-header {
    background-color: #007bff; /* Theme color for the header */
    color: white;
}

.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); /* Adding some elevation to card */
    transition: 0.3s;
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2); /* Hover effect */
}

.control-label {
    font-weight: bold; /* Making labels bold */
}
</style>